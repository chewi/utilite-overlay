depend() {
	need localmount
	after bootmisc
}

command="/usr/sbin/irqbalance"
command_args="${IRQBALANCE_OPTS}"

start() {
	ebegin "Starting irqbalance"
	start-stop-daemon --exec ${command} --start -- ${IRQBALANCE_OPTS}
	eend $?
}
